<Page x:Class="komunaliniai.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:komunaliniai"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="white">
        <Grid.RowDefinitions>
            <RowDefinition Height="167.8"/>
        </Grid.RowDefinitions>

        <Label Content="Username:" Grid.Row="0" HorizontalAlignment="Left" Margin="247,167,0,-25" Width="66"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Center" Width="150" Margin="0,171,0,-21" />

        <Label Content="Password:" HorizontalAlignment="Left" Margin="247,203,0,-61" Width="62"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Width="150" Margin="0,207,0,-57" />

        <Button Content="Login" HorizontalAlignment="Center" Width="80" Margin="0,248,0,-100" Click="Login_Click"/>
    </Grid>
</Page>
